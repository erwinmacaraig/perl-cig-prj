  <html>
    <head>
      <title>Receipt</title>
      <link rel="stylesheet" type="text/css" href="css/style.css">
			<style type="text/css">
				h2 { font-size:16px;}
				h3 { font-size:14px;}
				td { font-size:12px;}
				table.itemlist {
					border:1px solid #aaa;
					border-collapse: collapse;
					width:100%;
				}
				table.itemlist	td{
					padding:6px;
					border:0px 1px;
					border-right:1px solid #aaa;
				}
				.receiptbox	{
					width:400px;
					margin-left:auto;
					margin-right:auto;
				}
				body	{
				}
				table.paymentlist td{
					padding:6px;
				}

			</style>
    </head>
		<!-- <body onload="window.print();close();" > --> 
     <body>
			<div class="receiptbox">
     
            <div style="text-align:center; padding-top: 50px;">
				<h2>[% OtherInfo.0.strRealmName %] </h2>
				<h3>[% OtherInfo.0.Club %]</h3>
			</div>


       <table class="paymentlist">
		<tr>
			<td>[% index %]<b>[% Lang.txt('Payment For') %]:</b></td>
			<td>[% Receipts.1.Info.Name %]</td>
		</tr>
		<tr>
			<td><b>[% Lang.txt('Payment Date') %]:</b></td>
			<td>[% Receipts.1.Info.dtLog_FMT %]</td>
		</tr>
		<tr>
			<td><b>[% Lang.txt('Payment Type') %]:</b></td>
			<td>[% Receipts.1.Info.PaymentType %]</td>
		</tr>
		<tr>
			<td><b>[% Lang.txt('Receipt No') %].:</b></td>
			<td>[% Receipts.1.Info.intLogID %]</td>
		</tr>
	</table>
	<br><br>
	<table class="itemlist">
		<tr style = " border-bottom:1px solid #aaa;">
			<td style="width:80px;">[% Lang.txt('Item') %]</td>
			<td style="width:20px;">[% Lang.txt('QTY') %]</td>
			<td>[% Lang.txt('Description') %]</td>
			<td style="width:70px;">[% Lang.txt('Cost') %]</td>
		</tr>
	[% FOREACH i IN Receipts.0.Items %]
		<tr>
			<td>[% i.InvoiceNo %]</td>
			<td>[% i.intQty %]</td>
			<td>[% i.strName %]</td>
			<td>\$[% i.curAmount %]</td>
		</tr>
	[% END %]
		<tr style = " border-top:1px solid #aaa;">
			<td colspan="3"><b>[% Lang.txt('Payment Total') %]:</b></td>
			<td><b>\$[% Receipts.1.Info.intAmount %]</b></td>
		</tr>
	</table>

			</div>
    </body>
  </html>
