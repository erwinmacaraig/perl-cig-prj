<script type="text/javascript" src="//ajax.aspnetcdn.com/ajax/jquery.validate/1.9/jquery.validate.min.js"></script>
[% IF Errors.size %]
<div id="form-errors-old">
  <div class = "warningmsg">
      [% FOREACH error IN Errors %]
        <div class="error-msg">[% error %]</div>
      [% END %]
  </div>
</div>
[% ELSE %]

    
<div>
<h3>[% Lang.txt('Update your details') %]</h3>
 <form id = "update-form" action = "[% BaseURL %]/registration/user/profile.cgi" method ="POST">
    <div class = "form-group">
        <label for="email">[% Lang.txt('Email') %]</label>
        <input type = "text" name = "email" value = "[% Email %]" id = "signup-email"  class="form-control fields required" title="[% Lang.txt('Email Address') %]">
    </div>
    <div class = "form-group">
			<label for="firstname">[% Lang.txt('First Name') %]</label>
			<input type = "text" name = "firstname" value = "[% FirstName %]" size = "50" id = "signup-fname"  class="form-control fields required" title="[% Lang.txt('First name') %]">
		</div>
    <div class = "form-group">
			<label for="familyname">[% Lang.txt('Family Name') %]</label>
			<input type = "text" name = "familyname" value = "[% FamilyName %]" size = "50" id = "signup-sname"  class="form-control fields required" title="[% Lang.txt('Family name') %]">
	</div>
    <input type = "submit" class = "btn-main" value =" [% Lang.txt('Update') %] ">
    <input type = "hidden" name = "a" value = "SIGNUP">
    <input type = "hidden" name = "srp" value = "[% srp %]">
	
  </form>
</div>

<div>
    <h3>[% Lang.txt('Change your password') %]</h3>
    <form id = "updatepw-form" action = "[% BaseURL %]/registration/user/profile.cgi" method ="POST">
    <div class = "form-group">
        <label for="password">[% Lang.txt('Password') %]</label>
       <input type = "password" name = "password" value = "" size = "15" maxsize = "50" title="[% Lang.txt('password') %]" class="form-control" id = "password1"
    </div>
    <div class = "form-group">  
        <label for="password2">[% Lang.txt('Re-enter Password') %]</label>
	  <input type = "password" name = "password2" value = "" size = "15" maxsize = "50" id = "password2" class="form-control" title="[% Lang.txt('re-enter password') %]">
    </div>

    <input type = "submit" class = "btn-main" value =" [% Lang.txt('Update Password') %] ">
    <input type = "hidden" name = "a" value = "SIGNUP">
    <input type = "hidden" name = "srp" value = "[% srp %]">
	
  </form>
</div>

</div>
<script type="text/javascript">
	jQuery(document).ready(function(){
		jQuery("#signup-form").validate({
			rules: {
				email : {
					required: true,
					email: true
				},
				firstname : {
					required: true,
					minlength: 2
				},
				familyname : {
					required: true,
					minlength: 2
				},
				password : {
					required: true,
					minlength: 6
				},
				password2 : {
					required: true,
					minlength: 6,
					equalTo: "#signup-password"
				},
			},
			messages: {
				firstname: "[% Lang.txt('Please enter your First Name') %]",
				familyname: "[% Lang.txt('Please enter your Family Name') %]",
				password: {
					required: "[% Lang.txt('Please provide a password') %]",
					minlength: "[% Lang.txt('must be at least 6 characters long') %]"
				},
				password2 : {
					required: "[% Lang.txt('Please provide a password') %]",
					minlength: "[% Lang.txt('must be at least 6 characters long') %]",
					equalTo: "[% Lang.txt('Passwords do not match') %]"
				},
			}
		});
	});
</script>
[% END %]
</div>
