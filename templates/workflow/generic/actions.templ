    <div class="task-actions">

        [% IF TaskAction.showApprove %]
        <a class="btn-main" href = "main.cgi?client=[% TaskAction.client %]&a=WF_Approve&TID=[% TaskAction.WFTaskID %]">
            [% IF TaskAction.ApprovalEntityLevel == 3 %]
                [% Lang.txt('Accept') %]
            [% ELSE %]
                [% Lang.txt('Approve') %]
            [% END %]
        </a>
        [% END %]

        [% IF TaskAction.showReject %]
        <a class="btn-main" data-toggle="modal" data-target="#showReject" href = "">
            [% Lang.txt('Reject') %]
        </a>
        [% END %]

        [% IF TaskAction.showResolve %]
        <a class="btn-main" href = "main.cgi?client=[% TaskAction.client %]&a=WF_Resolve&TID=[% TaskAction.WFTaskID %]">
            [% Lang.txt('Resolve') %]
        </a>
        [% END %]

        [% IF TaskAction.showHold %]
        <a class="btn-main" data-toggle="modal" data-target="#showHold" href = "">
            [% Lang.txt('Put on-hold') %]
        </a>
        [% END %]

        [% IF TaskAction.showAddFields %]
        <a class="btn-main" href = "main.cgi?client=[% TaskAction.client %]&a=VENUE_FPA&venueID=[% TaskAction.venueID %]">
            [% Lang.txt('Add Fields') %]
        </a>
        [% END %]

        [% IF TaskAction.showEditFields %]
        <span class = "button-medium generic-button"><a href = "main.cgi?client=[% TaskAction.client %]&a=VENUE_Flist&venueID=[% TaskAction.venueID %]">[% Lang.txt('Edit Fields') %]</a></span>
        [% END %]

    </div>



