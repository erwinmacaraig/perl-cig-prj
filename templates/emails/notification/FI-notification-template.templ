<html>
<head>
  <style type="text/css">
    /*Email notifications status types*/
    .status-common{

    }
    .status-APPROVED{
      background-color: #009046;
      background-image: url([% BaseURL %]/images/status-check.png);
      width: 100px;
      border-radius: 3px;
      background-position: 11px center;
      background-repeat: no-repeat;
      color: white;
      padding: 5px 15px 5px 40px;
    }
    .status-CANCELLED{
      background-color: black;
      background-image: url([% BaseURL %]/images/status-x.png);
      width: 100px;
      border-radius: 3px;
      background-position: 11px center;
      background-repeat: no-repeat;
      color: white;
      padding: 5px 15px 5px 40px;
    }
    .status-ITCREQUEST{
      background-color: #0000ff;
      width: 100px;
      border-radius: 3px;
      background-position: 11px center;
      background-repeat: no-repeat;
      color: white;
      padding: 5px 15px 5px 40px;
    }
    .status-PENDING{
      background-color: #f26522;
      background-image: url([% BaseURL %]/images/status-gear-white.png);
      width: 100px;
      border-radius: 3px;
      background-position: 11px center;
      background-repeat: no-repeat;
      color: white;
      padding: 5px 15px 5px 40px;
    }
    .status-REASSIGNED{
      background-image: url([% BaseURL %]/images/status-gear-black.png);
      color:black;
      background-color: #00ffff;
      width: 100px;
      border-radius: 3px;
      background-position: 11px center;
      background-repeat: no-repeat;
      color: white;
      padding: 5px 15px 5px 40px;
    }
    .status-REJECTED{
      background-color: #9e0b0f;
      background-image: url([% BaseURL %]/images/status-x.png);
      width: 100px;
      border-radius: 3px;
      background-position: 11px center;
      background-repeat: no-repeat;
      color: white;
      padding: 5px 15px 5px 40px;
    }
  /*End of Email notifications status types*/
  </style>
</head>
<body leftmargin="0" topmargin="0" marginwidth="0" marginheight="0" bgcolor="#f4f4f4" style="margin:0; padding:0; -webkit-text-size-adjust:none; -ms-text-size-adjust:none;">
<table cellpadding="0" cellspacing="0" border="0" height="100%" width="100%" bgcolor="#f4f4f4" id="bodyTable" style="border-collapse: collapse;table-layout: fixed;margin:0 auto;"><tr><td>

<!-- CSS Image background in Outlook : BEGIN -->
