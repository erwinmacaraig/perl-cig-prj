<table border="0" width="680" cellpadding="0" cellspacing="0" align="center" bgcolor="#ffffff" style="border: 1px solid #e5e5e5; margin: auto;" class="email-container">
<tr style="background-color:#004e7e;"><!--Email header content -->
</tr>
<tr style="background-color:#085a8c; ">
	<td width="50" style="padding-top:8px; padding-bottom:8px; padding-left:40px;">
	  <h1 style="font-size:25px; font-weight:bold; color:#fff; font-family:arial, sans-serif; top:20px; float:right; margin-top: 35px">[% MA_HeaderName %]</h1>
	  <img src="[% BaseURL %]/images/emails/img-email-FI-logo.png" border="0" style="width:98px;" />
	</td>
<td style="padding-top:8px; padding-bottom:8px;">&nbsp;</td>
<td style="padding-top:8px; padding-bottom:8px; padding-right: 80px"  width="125">
  <a href="[% LoginURL || BaseURL %]"><img src="[% BaseURL %]/images/emails/img-email-login-btn.png" border="0" /></a>
</td>
</tr>

[% content %]

<tr style="background-color: #085a8c;"><!--Email footer content -->
  <td valign="top" style="padding-top:30px; padding-bottom:30px; width: 50%">
    <ul style="font-family:arial, sans-serif; font-size:12px; color:#fff; list-style:none;">
      <li style="padding-bottom:8px;"><strong>[% Lang.txt("Member Association") %]</strong></li>
      <li style="padding-bottom:8px;"><strong>[% Lang.txt("Phone") %]:</strong><a href="#" style="color:#fff; text-decoration:none"> [% MA_PhoneNumber %] </a></li>
      <li style="padding-bottom:8px; color: #fff""><strong>[% Lang.txt("Website") %]:</strong>&nbsp;<a style="color: #fff" href="[% MA_Website %]">[% MA_Website %]</a></li>
    </ul>
  </td>
  <td valign="top" style="padding-top:30px; padding-bottom:30px; width: 50%">
    <ul style="font-family:arial, sans-serif; font-size:12px; color:#fff; list-style:none;">
      <li style="padding-bottom:8px;"><strong>[% Lang.txt("Help Desk") %]</strong></li>
      <li style="padding-bottom:8px;"><strong>[% Lang.txt("Phone") %]:</strong><a href="#" style="color:#fff; text-decoration:none">[% MA_HelpDeskPhone %] </a></li>
      <li style="padding-bottom:8px; color: #fff""><strong>[% Lang.txt("Email") %]:</strong> <span style="color: #fff"><a style="color: #fff" href="mailto:[% MA_HelpDeskEmail %]">[% MA_HelpDeskEmail %]<a/></span></li>
    </ul>
  </td>
  <td>&nbsp;</td>
</tr>
