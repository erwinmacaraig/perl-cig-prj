  <html>
    <head>
      <title>Receipt</title>
      <link rel="stylesheet" type="text/css" href="css/style.css">
			<style type="text/css">
				h2 { font-size:16px;}
				h3 { font-size:14px;}
				td { font-size:12px;}
				table.itemlist {
					border:1px solid #aaa;
					border-collapse: collapse;
					width:100%;
				}
				table.itemlist	td{
					padding:6px;
					border:0px 1px;
					border-right:1px solid #aaa;
				}
				.receiptbox	{
					width:400px;
					margin-left:auto;
					margin-right:auto;
				}
				body	{
				}
				table.paymentlist td{
					padding:6px;
				}

			</style>
    </head>
		<!-- <body onload="window.print();close();" > --> 
     <body>
			<div class="receiptbox">
     
            <div style="text-align:center; padding-top: 50px;">
				<h2>[% entityName %] </h2>
			</div>


       <table class="paymentlist">
		<tr>
			<td>[% index %]<b>Payment For:</b></td>
			<td>[% person %]</td>
		</tr>
		<tr>
			<td><b>Invoice No.:</b></td>
			<td>[% invoicenum %]</td>
		</tr>
	</table>
	<br><br>
	<table class="itemlist">
		<tr style = " border-bottom:1px solid #aaa;">
			<td style="width:80px;">Transaction Number</td>
			<td>Item</td>
			<td style="width:20px;">Quantity</td>
			<td style="width:70px;">Cost</td>
		</tr>
	[% FOREACH t IN transactions %]
		<tr>
			<td>[% t.intTransactionID %]</td>
			<td>[% t.strName %]</td>
			<td>[% t.intQty %]</td>
			<td>\$ [% t.curAmount %]</td>
		</tr>
	[% END %]
		<tr style = " border-top:1px solid #aaa;">
			<td colspan="3"><b>Amount To Pay:</b></td>
			<td><b>\$ [% amount %]</b></td>
		</tr>
	</table>

			</div>
    </body>
  </html>
